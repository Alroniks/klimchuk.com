.content
    margin-bottom 30px
    & article
        font-size 19px
        color $color-text-article
        & h1
            margin 30px 0 40px
            font-size 32px

.language
    display inline-block
    font-size 12px
    line-height 14px
    margin-right 15px
    border 1px solid whitesmoke
    border-radius 4px
.language div
    font-family $font-sans
    padding 4px
.language div.active
    background whitesmoke
    color $color-bg-header
    font-weight bold

.jumbotron
    background-color $color-bg-header
    color $color-text-header
    padding-top 10px
    & a
    & a:visited
        color $color-text-header
        text-decoration underline

.recent
    & h2
        color $color-bg-header
        margin-bottom 30px
        font-weight bold
        line-height 48px
        & span
            margin-right 20px
    & time
        color $color-text-unimportant
    & h3
        margin-top 5px
        margin-bottom 20px
        font-size 20px
    & .desc
        font-size 16px
        margin-bottom 30px
    

.twitter
    font-size 16px
    background-color $color-bg-twitter
    color $color-text-twitter-text
    & figure
        margin 14px 0
    & figcaption
        & a
            color $color-text-twitter-user
    & blockquote
        padding 0
        padding-left 100px
        margin 0
        border 0
        & a
            color $color-text-twitter-text
            text-decoration underline

footer
    background-color $color-bg-footer
    color $color-footer-text
    & a 
    & a:visited
        color $color-footer-link
        &:hover
            color $color-footer-link-hover
    & h3
        color $color-footer-heading
        margin-bottom 10px
        margin-top 30px
        font-size 20px
    & ul li 
        font-size 16px
        &:last-child
            border 0
        & a
            line-height 36px
            border-bottom 1px solid $color-footer-column-line    
            &:hover
                border-color $color-footer-link
                text-decoration none
            & sup
                padding 0 3px
    & ul.clients li
        & a
            color $color-link-lang

.friends
    text-align center
.friends a
    text-decoration none
    margin 20px 15px
    display inline-block
.friends a img
    max-height 50px
    

.copyright
    line-height 30px
    overflow hidden
    font-size 12px
    background-color $color-bg-copy
    color $color-copy-text
    & a
        color $color-copy-link
        &:visited
            color darken($color-copy-link, 20)
        &:hover
            color $color-copy-link-hover
        
    & ul
        margin-bottom 0
.copyright * 
    font-family $font-sans


.section-header
    & .btn
        font-family $font-sans
        font-size 14px
        margin-top -2px
        margin-right 10px

.btn-info
    background-color transparent
    color $color-bg-header
    border-color $color-bg-header
    &:hover
        background-color $color-bg-header
        color $color-text-header


.contacts
    border-bottom 1px dashed $color-text-unimportant
    padding-bottom 20px
    & a.btn
        font-size 24px
    & > div
        text-align center
        margin 10px 0
    & > .col-sm-6
        text-align left
.profiles
    border-bottom 1px dotted $color-text-unimportant
    & div:last-child
        padding-bottom 20px
    & ul:first-child li        
        margin-left 10px
    & ul li 
        position relative
        line-height 1.88
    & ul li .icon
        position absolute
        left -23px
        top 0
        color $color-text-base
        line-height 30px
    & strong
        font-size 20px
    & address
        margin-bottom 10px
    & small
        display block
        font-size 12px
        margin-bottom 10px
.cv
    & h3
        font-size 20px
    & ul
        list-style circle
        font-size 14px
        margin-left -40px
        & li
            margin 10px 0
            & h4
                font-size 14px
                margin-bottom 0
                & small
                    display block
                    font-size 10px
            & a
                font-size 12px
        & li.current
            border-bottom 1px dashed $color-text-unimportant
            padding-bottom 10px
            & h4
                font-size 18px
                & small
                    font-size 13px
            & a
                font-size 14px

    & ul li strong:first-child
        font-size 16px
    & dl
        font-size 14px
        & dd
            font-size 12px
            margin-bottom 15px     

@media (max-width: 767px)
    .cv ul
        list-style none



