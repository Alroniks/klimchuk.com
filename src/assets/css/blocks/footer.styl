footer
    background-color $color-bg-footer
    color $color-footer-text
    & a 
    & a:visited
        color $color-footer-link
        &:hover
            color $color-footer-link-hover
    & h3
        color $color-footer-heading
        margin-bottom 10px
        margin-top 30px
        font-size 20px
    & ul li 
        font-size 16px
        &:last-child
            border 0
        & a
            line-height 36px
            border-bottom 1px solid $color-footer-column-line    
            &:hover
                border-color $color-footer-link
                text-decoration none
            & sup
                padding 0 3px
    & ul.clients li
        & a
            color $color-link-lang
        & .details
            color $color-footer-link
            font-size 12px
            line-height 1.2
        & .price
            color $color-price
            margin-bottom 0
            font-size 14px
            line-height 1
    & ul.projects li
        & a
            color $color-link-lang
        & .details
            color $color-footer-link
            font-size 14px
.friends
    text-align center
.friends a
    text-decoration none
    margin 20px 15px
    display inline-block
.friends a img
    max-height 50px

.license 
    font-size 10px
    line-height 12px