.recent
    .container
        .row
            .col-xs-12
                h2.section-header 
                    span!= rtt(__({ru:'Обновления блога', en:'Blog Updates'}))
                    a.btn.btn-sm.btn-info(href="/blog.html")!= __({ru:'Читать блог', en:'Read the Blog'})
                    //- a.btn.btn-sm.btn-success(href="#") Предложить тему

                for post in getCollection('posts').toJSON().slice(0,3)
                    .col-xs-12.col-md-4
                        time(pubdate, datetime=post.date)= pubDate(post.date)
                        h3: a(href=post.url)!= post.title
                        .desc: p!= rt(cuttedContent(post.contentRenderedWithoutLayouts))
